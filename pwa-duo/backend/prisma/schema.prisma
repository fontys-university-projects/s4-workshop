// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}


model User {
  id            Int      @id @default(autoincrement())
  uid           String   @unique
  firstName     String
  lastName      String
  email         String   @unique
  emailVerified Boolean  @default(false)
  password      String
  dob           DateTime
  role          UserRole @default(CLEINT)
  createdAt     DateTime @default(now())

  concerts      Concert[]
  tickets       Ticket[]
}

model Concert {
  id          Int       @id @default(autoincrement())
  cid         String    @unique
  name        String
  logoURL     String
  description String
  date        DateTime
  location    String

  user      User     @relation(fields: [userId], references: [id])
  userId    Int
  tickets  Ticket[]
}
model Ticket {
  id        Int      @id @default(autoincrement())

  qrCode    String
  entrance  String
  sector    String
  row       String
  seat      String
  purchased DateTime @default(now())

  user      User     @relation(fields: [userId], references: [id])
  userId    Int
  concert   Concert  @relation(fields: [concertId], references: [id])
  concertId Int
}


enum UserRole {
  CLEINT
  PARTNER
  CHECKUP
  IT
}